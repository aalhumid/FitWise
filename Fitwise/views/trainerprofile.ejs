<!-- views/trainerprofile.ejs -->
<!doctype html>
<html>
<head>
    <title>Fitwise</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-left">
        <h1><span class="fa"></span> Welcom, <%= trainer.username %></h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        
        <a href="/addmachine" class="btn btn-default btn-sm">Add New Machine</a>
        <a href="/editmacine" class="btn btn-default btn-sm">Edit Machine</a> <br> <br>
        <table border="1" cellpadding="7" cellspacing="7">
        <tr>
        <th width="50px">No.</th>
        <th>select</th>
        <th>Name</th>
        <th>Code</th>
        <th>Video Link</th>
        <th>Pic Link</th>
        </tr>
        <form action="/deletemachine" method="post">
        <div class="form-group">
        <% for(var i=0 ; i < machines.length ; i++) { %>
            <tr>
                <td><%=(i+1)%></td>
                <td>
                    <input type="checkbox" name="machineName" value="<%= machines[i].name %>">
                </td>
                <td> <%= machines[i].name %> </td>
                <td> <%= machines[i].QRCode %> </td>
                <td> <%= machines[i].videoLink %> </td>
                <td> <%= machines[i].picLink %> </td>
            </tr>
            <% } %>
        </table>
        </div>
        
        <br>
        <button type="submit" class="btn btn-default btn-sm">Delete</button>
        </form>

    </div>

</div>
</body>
</html>